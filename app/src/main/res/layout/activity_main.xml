<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.farhan.weather_app.MainActivity">

    <Button
        android:id="@+id/Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click Me!"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/tempF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature (Fahrenheit)"
        android:layout_below="@+id/location"
        android:layout_alignLeft="@+id/location"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@+id/tempC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tempF"
        android:layout_alignStart="@+id/tempF"
        android:layout_alignTop="@+id/tempF"
        android:layout_marginTop="40dp"
        android:text="Temperature (Celsius)" />

    <TextView
        android:id="@+id/weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tempC"
        android:layout_alignLeft="@+id/tempC"
        android:layout_below="@+id/tempC"
        android:layout_marginTop="40dp"
        android:text="Weather" />
    <TextView
        android:id="@+id/humid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weather"
        android:layout_alignStart="@+id/weather"
        android:layout_below="@+id/weather"
        android:layout_marginTop="40dp"
        android:text="Relative % Humidity"/>

</RelativeLayout>
